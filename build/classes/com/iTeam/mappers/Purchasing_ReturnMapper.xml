<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iTeam.dao.Purchasing_ReturnDao">

	<!-- 封装Purchasing_Return类的Map -->
	<resultMap type="Purchasing_Return" id="Purchasing_ReturnResult">
		<result property="prNo" column="prNo"/>
		<result property="goodsNo" column="goodsNo"/>
		<result property="prQuantity" column="prQuantity"/>
		<result property="prPrice" column="prPrice"/>
		<result property="prDate" column="prDate"/>
		<result property="handler" column="handler"/>
		<result property="prRemark" column="prRemark"/>
	</resultMap>
	
	<!-- 实现getPurchasing_ReturnList方法 -->
	<select id="getPurchasing_ReturnList" resultType="Purchasing_Return" parameterType="Map">
		select pr.*,g.goodsName,s.storageName from purchasing_return pr join goods g on g.goodsNo = pr.goodsNo inner join storage s on s.storageNo = pr.storageNo
		<where>
			<if test="goodsName != null and goodsName != ''">
				and goodsName like #{goodsName}
			</if>
		</where>
		<if test="start != null and size != null">
			limit #{start},#{size}
		</if>
	</select>
	
	<!-- 实现getTotal方法 -->
	<select id="getTotal" resultType="Long">
		select COUNT(*) from purchasing_return
		<where>
			<if test="goodsNo != null and goodsNo != ''">
				and goodsNo like #{goodsNo}
			</if>
		</where>
	</select>
	
	<!-- 实现add方法 -->
	<insert id="add" parameterType="Purchasing_Return">
		insert into purchasing_return values(null,#{goodsNo},#{prQuantity},#{prPrice},#{prDate},#{handler},#{prRemark},#{storageNo})
	</insert>
	
	<!-- 实现update方法 -->
	<update id="update" parameterType="Purchasing_Return">
		update purchasing_return
		<set>
			<if test="goodsNo != null and goodsNo != ''">
				goodsNo = #{goodsNo},
			</if>
			<if test="prQuantity != null and prQuantity != ''">
				prQuantity = #{prQuantity},
			</if>
			<if test="prPrice != null and prPrice != ''">
				prPrice = #{prPrice},
			</if>
			<if test="prDate != null">
				prDate = #{prDate},
			</if>
			<if test="handler != null and handler != ''">
				handler = #{handler},
			</if>
			<if test="prRemark != null and prRemark != ''">
				prRemark = #{prRemark},
			</if>	
			<if test="storageNo != null and storageNo != ''">
				storageNo = #{storageNo},
			</if>		
		</set>
		where prNo = #{prNo}
	</update>
	
	<!-- 实现delete方法 -->
	<delete id="delete" parameterType="Integer">
		delete from purchasing_return where prNO = #{prNo}
	</delete>
</mapper>